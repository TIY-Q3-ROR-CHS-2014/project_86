%div
  = form_for [@menu, @item] do |f|
    =f.label :name
    =f.text_field :name
    %br
    =f.label :price
    =f.number_field :price
    %br
    =f.label :season
    =f.text_field :season
    %br
    =f.label :menu_id
    =f.number_field :menu_id
    %br
    =f.label :workflow_state
    =f.text_field :workflow_state
    %br
    =f.submit